{
  "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentSize": 4,
    "ignore": ["*.json"]
  },
  "linter": {
    "rules": {
      "all": true
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
